<xobj:objects
        xmlns="http://namespace.xobj.org/xobj/wx"
        xmlns:xobj="http://namespace.xobj.org/xobj">
    <wx.Frame ui.id="main_frame" parent="None" title="'Hello World 2'">
        <wx.Panel>
            <wx.Image ui.id="image" width="240" height="240"/>
            <wx.StaticBitmap bitmap="wx.Bitmap(x.image)"/>
            <wx.Button label="'Browse'"/>
            <wx.TextCtrl size="(200,-1)"/>
            <wx.BoxSizer ui.id="main_sizer" orient="wx.VERTICAL">
                <wx.SizerItem window="x.StaticBitmap" proportion="0" flag="wx.ALL" border="5"/>
                <wx.BoxSizer ui.id="h_sizer" orient="wx.HORIZONTAL">
                    <wx.SizerItem window="x.Button" proportion="0" flag="wx.ALL" border="5"/>
                    <wx.SizerItem window="x.TextCtrl" proportion="0" flag="wx.ALL" border="7"/>
                </wx.BoxSizer>
                <x.main_sizer.Fit window="x.Frame"/>
            </wx.BoxSizer>
        </wx.Panel>
    </wx.Frame>
</xobj:objects>